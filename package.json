{
    "scripts": {
        "prepare": "husky",
        "test:all:chrome": "playwright test --project=chromium --workers=4 --retries=1",
        "docker:build": "docker build -t playwright-tests .",
        "docker:test": "docker-compose up --abort-on-container-exit",
        "docker:test:local": "docker run --rm -v $(pwd)/playwright-report:/app/playwright-report -v $(pwd)/test-results:/app/test-results playwright-tests",
        "docker:shell": "docker run --rm -it playwright-tests /bin/bash"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.1.0",
        "@modelcontextprotocol/sdk": "^1.20.2",
        "@playwright/test": "^1.56.1",
        "@slack/webhook": "^7.0.6",
        "axe-playwright": "^2.2.2",
        "axios": "^1.13.0",
        "colors": "^1.4.0",
        "dotenv": "^17.2.3",
        "eight-colors": "^1.3.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-playwright": "^2.2.2",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "zod": "^3.25.76"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
